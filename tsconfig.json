{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./lib",
		"rootDirs": ["src"],
    "sourceMap": true,
    "target": "ES6",
		"module": "ES6",
    "moduleResolution": "node",
    "allowJs": true,
    "strict": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "removeComments": true,
    "declaration": false,
    "skipLibCheck": true,
    "types": [
      "node"
    ],
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
