{
  "compilerOptions": {
    "baseUrl": ".",
    "rootDir": ".",
    "outDir": "dist",
    "jsx": "react",
    "target": "ES6",
    "module": "ES6",
    "sourceMap": true, 
    "allowJs": true, 
    "strict": true, 
    "noImplicitAny": false,
    "noUnusedLocals": true, 
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "removeComments": true, 
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "noEmit": false,
    "lib": ["ES6"],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "packages/tan-ui/src/*.ts",
    "packages/tan-ui/src/*.d.ts",
    "packages/tan-ui/src/*.tsx",
    "packages/tan-common/src/*.ts",
    "packages/tan-common/src/*.d.ts",
    "packages/tan-common/src/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
